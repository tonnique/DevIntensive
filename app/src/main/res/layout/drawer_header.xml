<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingTop="@dimen/spacing_medial_24"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_small_8"
                android:background="@drawable/header_bg">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/avatar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-medium"
            style="@style/drawer_header_text"/>

        <TextView
            android:id="@+id/user_email_txt"
            style="@style/drawer_header_text"
            android:fontFamily="sans-serif"
            android:text="mymail@yandex.ru"/>

    </LinearLayout>

</RelativeLayout>