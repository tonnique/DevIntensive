<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softdesign.devintensive.ui.activities.AuthActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/login_bg"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medial_24"
        android:paddingBottom="@dimen/spacing_medial_24"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/color_accent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medial_24"
                android:textColor="@color/color_accent"
                android:textSize="20sp"
                android:text="@string/user_auth.title" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/auth_text_input_layout">

            <EditText
                android:id="@+id/login_email_et"
                android:inputType="textEmailAddress"
                android:hint="@string/user_auth.email_hint"
                style="@style/auth_edit_text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/auth_text_input_layout">

            <EditText
                android:id="@+id/login_password_et"
                android:inputType="textPassword"
                android:hint="@string/user_auth.password_hint"
                style="@style/auth_edit_text"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:paddingLeft="@dimen/spacing_medium_32"
            android:paddingRight="@dimen/spacing_medium_32"
            android:layout_marginTop="@dimen/size_small_24"
            android:layout_marginBottom="@dimen/size_small_24"
            android:text="@string/user_auth.login_button"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_accent"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/forgot_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_light"
            android:text="@string/user_auth.forgot_password"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed" />

    </LinearLayout>

</FrameLayout>
